/**
 * @fileoverview Firestore Security Rules for QuizWhiz application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has complete control over their own data,
 * and no user can access or modify another user's data.
 *
 * Data Structure:
 * The Firestore database is structured hierarchically with the following collections:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/quizzes/{quizId}: Stores quizzes created by each user.
 * - /users/{userId}/quizzes/{quizId}/questions/{questionId}: Stores questions associated with each quiz.
 * - /users/{userId}/quizzes/{quizId}/questions/{questionId}/userAnswers/{userAnswerId}: Stores user's answers for each question in a quiz.
 *
 * Key Security Decisions:
 * - User data is strictly segregated by user ID.
 * - Listing other users is disallowed.
 * - Data validation is relaxed to allow rapid prototyping, focusing on ownership checks.
 *
 * Denormalization for Authorization:
 * The data structure itself enforces authorization. The nested paths ensure that a user ID is always available
 * for checking ownership, eliminating the need for `get()` calls to other documents.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-ownership for user profiles.
     * @path /users/{userId}
     * @allow (create) Authenticated user creates their own profile with matching user ID.
     * @deny (create) Authenticated user attempts to create a profile with a mismatched user ID.
     * @allow (get, update, delete) Authenticated user accesses their own profile.
     * @deny (get, update, delete) Authenticated user attempts to access another user's profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for quizzes.
     * @path /users/{userId}/quizzes/{quizId}
     * @allow (create) Authenticated user creates a quiz under their profile.
     * @deny (create) Authenticated user attempts to create a quiz under another user's profile.
     * @allow (get, list, update, delete) Authenticated user accesses and modifies their own quizzes.
     * @deny (get, list, update, delete) Authenticated user attempts to access or modify another user's quizzes.
     * @principle Enforces hierarchical ownership and prevents cross-user data access.
     */
    match /users/{userId}/quizzes/{quizId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for questions within quizzes.
     * @path /users/{userId}/quizzes/{quizId}/questions/{questionId}
     * @allow (create) Authenticated user creates a question under their quiz.
     * @deny (create) Authenticated user attempts to create a question under another user's quiz.
     * @allow (get, list, update, delete) Authenticated user accesses and modifies their own questions.
     * @deny (get, list, update, delete) Authenticated user attempts to access or modify another user's questions.
     * @principle Enforces hierarchical ownership and prevents cross-user data access.
     */
    match /users/{userId}/quizzes/{quizId}/questions/{questionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.quizId == quizId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.quizId == quizId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for user answers within questions.
     * @path /users/{userId}/quizzes/{quizId}/questions/{questionId}/userAnswers/{userAnswerId}
     * @allow (create) Authenticated user creates an answer under their question.
     * @deny (create) Authenticated user attempts to create an answer under another user's question.
     * @allow (get, list, update, delete) Authenticated user accesses and modifies their own answers.
     * @deny (get, list, update, delete) Authenticated user attempts to access or modify another user's answers.
     * @principle Enforces hierarchical ownership and prevents cross-user data access.
     */
    match /users/{userId}/quizzes/{quizId}/questions/{questionId}/userAnswers/{userAnswerId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}